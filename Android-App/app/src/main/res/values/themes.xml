<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WallScheduler" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/light_primary_text</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:textColor">@color/light_primary_text</item>

    </style>

    <style name="cardStandard">
        <item name="cardBackgroundColor">@color/light_card_colour</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="subCardStandard">
        <item name="cardBackgroundColor">@color/light_subcard_color</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="confirmCard">
        <item name="cardBackgroundColor">@color/light_confirmcard_color</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>


    <style name="rejectCard">
        <item name="cardBackgroundColor">@color/light_rejectcard_color</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="cardRoom">
        <item name="cardBackgroundColor">@color/light_card_colour</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="svgIcon">
        <item name="iconColour">@color/black</item>"
    </style>

    <style name="Theme.WallScheduler" parent="Base.Theme.WallScheduler" />
</resources>